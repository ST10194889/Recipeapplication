<Window x:Class="Recipeapplication.windowADD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipeapplication"
        mc:Ignorable="d"
        Title="windowADD" Height="200" Width="300">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="front.jpg"/>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Label x:Name="label" Content="Enter Recipe Name :" HorizontalAlignment="Left" Height="30" Margin="72,50,0,0" VerticalAlignment="Top" Width="134" Foreground="White"/>
        <TextBox x:Name="txtRecName" HorizontalAlignment="Left" Margin="72,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" Height="30"/>
        <Button x:Name="btn_Next" Content="NEXT" HorizontalAlignment="Left" Margin="90,139,0,0" VerticalAlignment="Top" Height="20" Width="98" Click="btn_next"/>

    </Grid>
</Window>
