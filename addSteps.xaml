<Window x:Class="Recipeapplication.addSteps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipeapplication"
        mc:Ignorable="d"
        Title="addSteps" Height="450" Width="500">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="front.jpg"/>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Label x:Name="label" Content="Step Description " Foreground="White" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top" Height="42" Width="115"/>
        <TextBox x:Name="txtsteps" HorizontalAlignment="Left" Height="50" Margin="37,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btn_addstep" Content="save Step" HorizontalAlignment="Left" Margin="55,150,0,0" VerticalAlignment="Top" Height="20" Width="140" Click="btn_addingStep"/>
        <Button x:Name="btn_done" Content="Save Recipe" HorizontalAlignment="Left" Margin="55,190,0,0" VerticalAlignment="Top" Height="20" Width="140" Click="btn_save"/>
        <ListBox x:Name="savedsteps" HorizontalAlignment="Left" Height="207" Margin="250,75,0,0" VerticalAlignment="Top" Width="230" />

    </Grid>
</Window>
